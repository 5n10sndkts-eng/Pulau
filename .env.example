# Test Environment Configuration
TEST_ENV=local
BASE_URL=http://localhost:5173
API_URL=http://localhost:5173/api

# Authentication (for E2E tests)
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=password123

# Simulation Mode
# Set to 'true' to use mock data (no Supabase required)
# Set to 'false' to use real Supabase backend
VITE_USE_MOCK_DATA=true
VITE_USE_MOCK_AUTH=true

# Supabase Configuration
# Get these values from: https://supabase.com/dashboard/project/_/settings/api
# 1. Create a project at supabase.com
# 2. Go to Settings > API
# 3. Copy "Project URL" and "anon public" key
VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Email Provider (Resend) - Story 30.1
# Required for Edge Functions to send transactional emails
# Get API key from: https://resend.com/api-keys
# Add this secret to Supabase Dashboard > Project Settings > Edge Functions > Secrets
RESEND_API_KEY=re_your-api-key-here

# Sentry Error Tracking - Story 32.1
# Required for production error monitoring
# Get DSN from: https://sentry.io/settings/YOUR_ORG/projects/YOUR_PROJECT/keys/
# VITE_ prefix makes it available to the frontend
VITE_SENTRY_DSN=https://your-public-key@o123456.ingest.sentry.io/your-project-id

# Sentry Source Maps Upload (build-time only, not VITE_ prefixed)
# Required for uploading source maps during CI/CD builds
# Get auth token from: https://sentry.io/settings/account/api/auth-tokens/
SENTRY_AUTH_TOKEN=your-auth-token-here
SENTRY_ORG=pulau
SENTRY_PROJECT=pulau-web

# Optional: App version for Sentry releases
VITE_APP_VERSION=1.0.0
